<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_graph"
    app:startDestination="@id/cardsFragment">

    <fragment
        android:id="@+id/cardsFragment"
        android:name="com.te6lim.ytcviewer.home.cards.CardsFragment"
        android:label="fragment_cards"
        tools:layout="@layout/fragment_cards">
        <action
            android:id="@+id/action_cardsFragment_to_filterSelectionFragment"
            app:destination="@id/filterSelectionFragment" />
        <action
            android:id="@+id/action_cardsFragment_to_cardDetailsFragment2"
            app:destination="@id/cardDetailsFragment2" />
    </fragment>
    <fragment
        android:id="@+id/collectionFragment"
        android:name="com.te6lim.ytcviewer.home.collections.CollectionsFragment"
        android:label="fragment_collection"
        tools:layout="@layout/fragment_collection" />
    <fragment
        android:id="@+id/filterSelectionFragment"
        android:name="com.te6lim.ytcviewer.filters.FilterSelectionFragment"
        android:label="fragment_filter_options"
        tools:layout="@layout/fragment_filter_options" />
    <fragment
        android:id="@+id/cardDetailsFragment2"
        android:name="com.te6lim.ytcviewer.details.CardDetailsFragment"
        android:label="fragment_details_card"
        tools:layout="@layout/fragment_details_card" />
</navigation>