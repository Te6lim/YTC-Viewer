<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    android:label="@string/app_name_alt"
    app:startDestination="@id/cardsFragment">

    <fragment
        android:id="@+id/cardDetailsFragment"
        android:name="com.te6lim.ytcviewer.details.CardDetailsFragment"
        android:label="Tornado Dragon"
        tools:layout="@layout/fragment_details_card" />
    <fragment
        android:id="@+id/filterSelectionFragment"
        android:name="com.te6lim.ytcviewer.filters.FilterSelectionFragment"
        tools:layout="@layout/fragment_filter_options">
        <argument
            android:name="categoryName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/cardsFragment"
        android:name="com.te6lim.ytcviewer.cards.CardsFragment"
        android:label="CardsFragment">
        <action
            android:id="@+id/action_cardsFragment3_to_cardDetailsFragment"
            app:destination="@id/cardDetailsFragment" />
        <action
            android:id="@+id/action_cardsFragment3_to_filterSelectionFragment"
            app:destination="@id/filterSelectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/collectionsFragment"
        android:name="com.te6lim.ytcviewer.collections.CollectionsFragment"
        android:label="fragment_collection"
        tools:layout="@layout/fragment_collection" />
</navigation>