<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    android:label="@string/app_name_alt"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.te6lim.ytcviewer.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_cardDetailsFragment"
            app:destination="@id/cardDetailsFragment"
            app:enterAnim="@anim/slide_right_to_center"
            app:exitAnim="@anim/slide_center_to_left"
            app:popEnterAnim="@anim/slide_left_to_center"
            app:popExitAnim="@anim/slide_center_to_right" />
        <action
            android:id="@+id/action_homeFragment_to_filterSelectionFragment"
            app:destination="@id/filterSelectionFragment"
            app:enterAnim="@anim/rise_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fall_down" />
    </fragment>
    <fragment
        android:id="@+id/cardDetailsFragment"
        android:name="com.te6lim.ytcviewer.details.CardDetailsFragment"
        android:label="Tornado Dragon"
        tools:layout="@layout/fragment_details_card" />
    <fragment
        android:id="@+id/filterSelectionFragment"
        android:name="com.te6lim.ytcviewer.home.cards.FilterSelectionFragment"
        tools:layout="@layout/fragment_filter_options" />
</navigation>