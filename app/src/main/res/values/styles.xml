<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="card_property_container_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/small_spacing</item>
    </style>

    <style name="card_property_title_style">
        <item name="android:layout_marginEnd">@dimen/small_spacing</item>
        <item name="android:layout_gravity">center|start</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="card_property_value_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="card_property_icon_style">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="card_property_divider_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/secondaryLightColor</item>
    </style>

    <style name="card_meta_property_value_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/small_spacing</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="small_image_style">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="detailsTitleTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/playfair_display_bold</item>
    </style>

    <style name="titleTextStyle">
        <item name="fontFamily">@font/playfair_display</item>
        <item name="android:fontFamily">@font/playfair_display</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="overflowStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="iconTint">@color/primaryColor</item>
    </style>
</resources>