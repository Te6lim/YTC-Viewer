<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="card_property_container_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/small_spacing</item>
    </style>

    <style name="card_property_title_style">
        <item name="android:layout_marginEnd">@dimen/medium_spacing</item>
        <item name="android:layout_gravity">center|start</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="card_property_value_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="card_property_icon_style">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>
</resources>